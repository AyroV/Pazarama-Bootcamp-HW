@model List<Category>
<div class="list-group">
    <a href="/book/list" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == null ? "active" : "")">Tüm Kategoriler</a>
    @foreach(var category in Model)
     {
        <a href="/book/list/@category.CategoryId" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.CategoryId.ToString() ? "active" : "")">
            @category.Name
        </a>
     }
</div>