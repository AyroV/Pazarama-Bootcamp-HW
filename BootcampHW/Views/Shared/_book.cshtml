@model Book
<div class="card mb-3">
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" alt="@Model.Title" class="img-fluid" />
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h3 class="card-title">@Model.Title</h3>
                <h6 class="card-title">@Model.Author</h6>
                <div>
                    <a class="btn btn-primary" asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookId">Detaya Git</a>

                    <a class="btn btn-warning" asp-controller="Book" asp-action="Edit" asp-route-id="@Model.BookId">Düzenle </a>
                    <form asp-controller="Book" asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@Model.BookId" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>